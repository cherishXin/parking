.standard-btn {
  bottom: 24rpx;
  color: #279df2;
  font-size: 28rpx;
  left: 0;
  line-height: 58rpx;
  position: absolute;
  text-align: center;
  width: 100%;
}

/*start header*/

header {
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
  font-size: 28rpx;
  padding: 64rpx 60rpx;
}

.date-left {
  flex: 1;
  line-height: 52rpx;
  padding-top: 56rpx;
  text-align: center;
}

.date-left i {
  color: #999;
  font-style: normal;
}

.date-left p {
  font-size: 36rpx;
}

.date-left .year {
  line-height: 42rpx;
}

.pic-right {
  border-radius: 100%;
  height: 236rpx;
  margin-left: 136rpx;
  overflow: hidden;
  width: 236rpx;
}

.pic-right .pic {
  background: url('../../images/pic.jpg')  center no-repeat;
  background-size: cover;
  height: 100%;
  width: 100%;
}

/*end header*/

/*start searchList*/

.iconfont {
  color: #272536;
  font-size: 40rpx;
}
.tap-box {
  border-top: 1rpx solid #e0e0e0;
}

.tap-box li.search-tap {
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
  height: 160rpx;
  line-height: 160rpx;
  padding: 0 42rpx;
}

.tap-box li.search-tap .item-con {
  flex: 1;
}

.tap-box li.search-tap .item-con figure{
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  display: inline-block;
  height: 84rpx;
  overflow: hidden;
  vertical-align: middle;
  width: 84rpx;
}

.tap-box li.search-tap .item-con figure em {
  background: url('../../images/pic.jpg')  center no-repeat;
  background-size: cover;
  display: block;
  height: 100%;
  width: 100%;
}

.tap-box li.search-tap .item-con span {
  font-size: 28rpx;
  font-weight: bold;
  padding-left: 38rpx;
  vertical-align: middle;
}

.cars {
  color: #000;
}

/*end searchList*/

/*start btnList*/

.footer {
  bottom: 0;
  font-size: 32rpx;
  font-weight: bold;
  height: 120rpx;
  left: 0;
  line-height: 120rpx;
  position: fixed;
  -webkit-transform: translateZ(0);
  transform: translateZ(0);
  width: 100%;
}

.footer .butn {
  background-color: #09bb08;
  flex: 1;
  color: #fff;
  font-weight: bold;
  text-align: center;
}

.footer .butn.butn2 {
  background-color: #c7c7c7;
}

/*end btnList*/

/*start freeAdd*/

.free-add {
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
  line-height: 103rpx;
  padding: 0 42rpx;
}

.free-add .iconfont {
  font-size: 30rpx;
}

.free-add.active i {
  color: #32b200;
}

.free-add .icon {
  color: #333;
  font-size: 42rpx;
  margin-right: 12rpx;
  vertical-align: middle;
}

.free-add dt {
  flex: 1;
  color: #333;
  font-weight: bold;
}

.free-add dt span {
  vertical-align: middle;
}

.free-add dd {
  color: #666;
}

/*end freeAdd*/